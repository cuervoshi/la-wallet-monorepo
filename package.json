{
  "name": "lawallet-monorepo",
  "private": true,
  "type": "module",
  "prettier": "@lacrypta/prettier-config",
  "scripts": {
    "build": "pnpm plugins webapp-config && turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\"",
    "build:react": "pnpm --filter @lawallet/react build",
    "build:utils": "pnpm --filter @lawallet/utils build && pnpm --filter @lawallet/plugins-utils build",
    "build:ui": "pnpm --filter @lawallet/ui build",
    "build:libs": "pnpm build --filter=./packages/*",
    "build:plugins": "pnpm build --filter=./plugins/* && pnpm plugins webapp-config",
    "build:web": "pnpm plugins webapp-config && pnpm --filter lawallet-front build",
    "build:docs": "pnpm --filter @lawallet/docs build",
    "web:dev": "pnpm --filter lawallet-front dev",
    "web:start": "pnpm --filter lawallet-front start",
    "docs:dev": "pnpm --filter @lawallet/docs dev:docs",
    "docs:start": "pnpm --filter @lawallet/docs start:docs",
    "ui:dev": "pnpm --filter @lawallet/ui dev",
    "plugins": "node ./scripts/plugins-commander.js",
    "add-plugin": "pnpm plugins add",
    "create-plugin": "pnpm plugins create"
  },
  "devDependencies": {
    "@lawallet/plugins-utils": "workspace:*",
    "@lacrypta/eslint-config": "^1.0.0",
    "@lacrypta/prettier-config": "^1.0.0",
    "@lacrypta/typescript-config": "^1.0.0",
    "prettier": "^3.2.5",
    "turbo": "^1.12.5"
  },
  "packageManager": "pnpm@8.9.0",
  "overrides": {
    "nostr-tools": "npm:@lawallet/nostr-tools"
  },
  "pnpm": {
    "overrides": {
      "nostr-tools": "npm:@lawallet/nostr-tools"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "config/*",
    "plugins/*"
  ]
}